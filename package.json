{
  "name": "@wulechuan/markdown-to-html-via-cli",
  "author": "wulechuan <wulechuan@live.com>",
  "license": "WTFPL",
  "version": "2.0.4",
  "description": "Convert markdown files in HTML files in your CLI environments.",
  "main": "index.js",
  "bin": {
    "wlc-md-to-html": "./index.js"
  },
  "keywords": [
    "markdown",
    "html",
    "cli",
    "markdown",
    "convert",
    "conversion",
    "html",
    "article",
    "typography",
    "pretty",
    "beautify",
    "responsive",
    "responsive layout",
    "gorgeous"
  ],
  "scripts": {
    "prepublishOnly": "npm test",
    "postinstall": "npm  run  _buildReadMeHTMLs",
    "eslint": "eslint    ./.eslintrc.js    ./index.js",
    "_buildReadMeHTMLs": "rm  -rf  ./ReadMe*.html    &&    node ./index.js",
    "_testTheCLIHelp": "node  ./index.js  -h    &&    echo . && echo ===================== && echo .",
    "_testTheFakeProject": "rm  -rf  ./tests/fake-project/*.html   ./tests/fake-project/docs/*.html    &&    node ./index.js   -i ./tests/fake-project/**/*.md,./tests/fake-project/**/*.MD    -o '*'  -2 -E3 -e -D -C ./tests/converter-options.js",
    "buildReadMeHTMLs": "npm  run  eslint    &&    npm  run  _buildReadMeHTMLs",
    "test": "npm              run  eslint    &&    npm  run  _testTheCLIHelp    &&    npm  run  _buildReadMeHTMLs     &&     npm  run  _testTheFakeProject"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wulechuan/wulechuan-js-markdown-to-html-via-cli.git"
  },
  "bugs": {
    "url": "https://github.com/wulechuan/wulechuan-js-markdown-to-html-via-cli/issues"
  },
  "homepage": "https://github.com/wulechuan/wulechuan-js-markdown-to-html-via-cli#readme",
  "dependencies": {
    "@wulechuan/css-stylus-markdown-themes": "^6.0.0",
    "@wulechuan/generate-html-via-markdown": "^2.0.1",
    "chalk": "^2.4.2",
    "commander": "^3.0.1",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1"
  }
}
