{
  "name": "@wulechuan/markdown-to-html-via-cli",
  "author": "wulechuan <wulechuan@live.com>",
  "license": "WTFPL",
  "version": "2.9.1",
  "description": "Convert markdown files in HTML files in your CLI environments.",
  "main": "index.js",
  "bin": {
    "wlc-md-to-html": "./index.js"
  },
  "keywords": [
    "markdown",
    "html",
    "cli",
    "markdown",
    "convert",
    "conversion",
    "html",
    "article",
    "typography",
    "pretty",
    "beautify",
    "responsive",
    "responsive layout",
    "gorgeous"
  ],
  "scripts": {
    "eslint": "eslint  ./.eslintrc.js  ./index.js",
    "_updateVersionsInReadMeMarkDownsAndUpdateDateInMainJSFile": "node  ./helpers/update-versions-in-readme.js",
    "_buildReadMeHTMLs": "npm  run  _updateVersionsInReadMeMarkDownsAndUpdateDateInMainJSFile    &&    rm  -rf  ./ReadMe*.html    &&    node ./index.js",
    "_testTheFakeProject": "rm  -rf  ./tests/fake-project/*.html  ./tests/fake-project/docs/*.html         &&    node  ./index.js  -i ./tests/fake-project/**/*.md,./tests/fake-project/**/*.MD  -o '*'  -E3  -e  -D  -d  -C ./tests/converter-options.js",
    "_testTheCLIHelp": "node  ./index.js  -h",
    "_testAllWithoutLintingWithoutBrowser": "npm        run  _buildReadMeHTMLs     &&     npm  run  _testTheFakeProject    &&    npm  run  _testTheCLIHelp",
    "buildReadMeHTMLs": "npm  run  eslint    &&    npm  run  _buildReadMeHTMLs",
    "test": "npm              run  eslint    &&    npm  run  _testAllWithoutLintingWithoutBrowser",
    "beforeGitCommit": "npm  test",
    "prepublishOnly": "npm   test",
    "postinstall": "npm  run  _buildReadMeHTMLs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wulechuan/wulechuan-js-markdown-to-html-via-cli.git"
  },
  "bugs": {
    "url": "https://github.com/wulechuan/wulechuan-js-markdown-to-html-via-cli/issues"
  },
  "homepage": "https://github.com/wulechuan/wulechuan-js-markdown-to-html-via-cli#readme",
  "dependencies": {
    "@wulechuan/css-stylus-markdown-themes": "^6.4.7",
    "@wulechuan/generate-html-via-markdown": "^2.9.4",
    "chalk": "^3.0.0",
    "commander": "^4.1.1",
    "fs-extra": "^8.1.0",
    "globby": "^11.0.0"
  }
}
